<h2><%= cocktail.name %></h2>

<h3>Ingredients</h3>
  <ul>
    <% cocktail.recipes.each do |recipe| %>
      <li><%= recipe.ingredient.name %>, <%= recipe.measurement %></li>
    <% end %>
  </ul>

<% if cocktail.drinkware %>
<h3>Drinkware</h3>
<p>Serve in a <%= cocktail.drinkware.name %></p>
<% end %>

<% if cocktail.garnish %>
<h3>Garnish</h3>
<p><%= cocktail.garnish %></p>
<% end %>

<% if cocktail.instructions %>
<h3>Instructions</h3>
<p><%= cocktail.instructions %></p>
<% end %>
